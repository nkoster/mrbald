#!/bin/bash

### Mister Bald

subscribers() {
    channel=$(wget -q "$1" -O -| \
        grep '<title>')
    subscribers=$(wget -q "$1" -O - | grep abonnees | \
        awk -F 'aria-label="' '{print$6}' | awk '{print$1}' | sed 's/\.//g') && \
    echo "$subscribers ${channel:9}"
}

